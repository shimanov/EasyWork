@model WebApplication2.Domain.Entities.User
@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
    ViewBag.Title = "Register";
}
<div class="parent">
    <div class="child">
        <h1>Регистрация</h1>
        <hr/>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-envelope-o fa-fw"></i>
                    </span>
                    @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-key fa-fw"></i>
                    </span>
                    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <p>
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary"/>
            </p>
        }
    </div>
</div>



