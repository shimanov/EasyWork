@model WebApplication2.Models.Identity.LoginModel

@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
    ViewBag.Title = "LogIn";
}

<div class="container-fluid full">
    <div class="row">
        <div class="col-md-4 col-md-offset-5">
            <h1>EASY WORK</h1>
            <h2>Сделай свою работу немного легче...</h2>
        </div>
        <div class="col-md-4 col-lg-offset-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.ValidationSummary()

                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                            @Html.EditorFor(x => x.Email, new {htmlAttributes = new {@class = "form-control"},})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            @Html.EditorFor(x => x.Passord, new {htmlAttributes = new {@class = "form-control"},})
                        </div>
                    </div>
                    <p><button class="btn btn-primary" type="submit">Войти</button>
                    </p>
                </div>
            }
        </div>
    </div>
</div>





