@model IEnumerable<WebApplication2.Models.Identity.ApplicationRole>
@{
    ViewBag.Title = "Roles";
}
<h2>Roles</h2>

@if (User.IsInRole("admin"))
{
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <th>@i.Name</th>
                <th>@i.Description</th>
                <th>
                    @Html.ActionLink("Edit", "Edit", new { id = i.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = i.Id })
                </th>
            </tr>
        }
    </table>
}
else
{
  Response.Redirect("~/AccessDenided");
}


