@model WebApplication2.Models.Authentication.AuthenticationParams
    
@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
    ViewBag.Title = "LogIn";
}

@section header
{
    <span>|</span>
    @Html.ActionLink("регистрация", "Register", "Authencation")
}

@using (Html.BeginForm("LogIn", "Authencation", FormMethod.Post))
{
    <div>
        <table>
            <tr>
                <td>Логин</td>
                <td>
                    @Html.TextBoxFor(x => x.User, new
                    {
                        id = "user",
                        name = "user"
                    })
                </td>
            </tr>
        </table>
    </div>
    <div>
        <table>
            <tr>
                <td>Пароль</td>
                <td>
                    @Html.PasswordFor(x => x.Password, new
                    {
                        id = "password",
                        name = "password"
                    })
                </td>
            </tr>
        </table>
    </div>

    if (Model.IsAuthFailed)
    {
        <div>
            Ошибка авторизациию Неверный логин и пароль.
        </div>
    }

    <div>
        @Html.ValidationSummary(false)
    </div>

    <input type="submit" value="login"/>
}
