@model WebApplication2.Domain.Entities.Script
@{
    ViewBag.Title = "EditScript";
}

<h2>EditScript</h2>

@using (Html.BeginForm("EditScript", "Script", FormMethod.Post))
{
    <table>
        <tr>
            <td>Описание</td>
            <td>@Html.TextBoxFor(x => x.Description)</td>
        </tr>
        <tr>
            <td>Скрипт</td>
            <td>@Html.TextBoxFor(x => x.Scripts)</td>
        </tr>
    </table>

    <input type="submit" value="Добавить" />
}
