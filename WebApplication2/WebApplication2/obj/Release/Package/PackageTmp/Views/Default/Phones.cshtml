@model IEnumerable<WebApplication2.Domain.Entities.PhoneBook>  
@{
    ViewBag.Title = "Phones";
}

<h2>Phones</h2>

<div>
    <table>
        <tr>
            <td>Почтамт</td>
            <td>Имя фамилия</td>
            <td>Номер телефона</td>
            <td>&nbsp;</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pochtamt</td>
                <td>@item.Fio</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <span>@Html.ActionLink("Редактировать", "EditPhone", new
                          {
                              id = item.Id
                          })
                    </span>
                    <span>|</span>
                    <span>@Html.ActionLink("Удалить", "DeletePhone", new
                          {
                              id = item.Id
                          })
                    </span>
                </td>
            </tr>
        }
    </table>

    <div>
        @Html.ActionLink("Добавить", "AddPhone")
    </div>
</div>


